@model GestionCinema.Models.Salle

@{
    ViewData["Title"] = "Ajouter une salle de cinéma";
}

<h2 class="mb-5">| Ajouter une salle de cinéma</h2>
<form asp-action="Create">
    <fieldset class="fieldset-style p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row px-4 py-2">
            <div class="col-sm-4">
                <label asp-for="Cinema" class="control-label"></label>
            </div>
            <div class="col-sm-6">
                <select asp-for="CinemaId" class="form-control" asp-items="ViewBag.CinemaId"></select>
                <span asp-validation-for="CinemaId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row px-4 py-2">
            <div class="col-sm-4">
                <label asp-for="NbPlace" class="control-label"></label>
            </div>
            <div class="col-sm-6">
                <input type="number" min="0" asp-for="NbPlace" class="form-control" />
                <span asp-validation-for="NbPlace" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row px-4 py-2">
            <div class="col-sm-4">
                <label asp-for="NumeroSalle" class="control-label"></label>
            </div>
            <div class="col-sm-6">
                <input type="number" min="0" asp-for="NumeroSalle" class="form-control" />
                <span asp-validation-for="NumeroSalle" class="text-danger"></span>
            </div>
        </div>
    </fieldset>
    <div class="form-group text-center mt-4">
        <input type="submit" value="Ajouter" class="btn btn-primary" />
    </div>
</form>
<div class="mt-4">
    <a class="text-decoration-none" asp-action="Index"><i class="bi bi-arrow-left-circle-fill"></i> Retour à la
        page précédente</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}