@model IEnumerable<GestionCinema.Models.Salle>

@{
    ViewData["Title"] = "Rechercher les salles d'un cinéma";
}
<h2 class="mb-5">|Salles du cinéma </h2>

<div class="container pt-4">
    <div class="row justify-content-start">
        @foreach (var item in Model)
        {
            <div class="col-sm p-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">Salle: @Html.DisplayFor(modelItem => item.NumeroSalle)</h5>
                        <hr>
                        <p class="card-text text-truncate-2">Nombre de place : @Html.DisplayFor(modelItem => item.NbPlace)
                        </p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Plus d'info</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="mt-5">
    <a class="text-decoration-none" asp-controller="Film" asp-action="Index"><i
            class="bi bi-arrow-left-circle-fill"></i> Retour à la
        liste des salles</a>

</div>
