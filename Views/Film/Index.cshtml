@model IEnumerable<GestionCinema.Models.Film>

@{
    ViewData["Title"] = "Les films";
}
<h2 class="mb-5">| Les films disponibles</h2>
<a class="btn btn-dark" asp-controller="Film" asp-action="Create"><i class="bi bi-plus-circle"></i> Ajouter un
    film</a>
<div class="card-group mt-5">
    <div class="row justify-content-start">
        @foreach (var item in Model)
        {
            <div class="col-xl-4 col-md-3 col-sm-2 my-2">
                <div class="card" >
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nom), @Html.DisplayFor(modelItem =>
                        item.Realisateur)</h5>
                        <hr>
                        <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Genre)</h6>
                        <p class="card-text text-truncate-2">@Html.DisplayFor(modelItem => item.Resume)</p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Plus d'info</a>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">@Html.DisplayFor(modelItem => item.Date)</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>