@model GestionCinema.Models.Film

@{
    ViewData["Title"] = "Ajouter un film";
}
<h2 class="mb-5">| Ajouter un film</h2>
<form asp-action="Create">
    <fieldset class="fieldset-style p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row px-4 py-2">
            <div class="col-sm-4">
                <label asp-for="Nom" class="control-label"></label>
            </div>
            <div class="col-sm-6">
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row px-4 py-2">
            <div class="col-sm-4">
                <label asp-for="Realisateur" class="control-label"></label>
            </div>
            <div class="col-sm-6">
                <input asp-for="Realisateur" class="form-control" />
                <span asp-validation-for="Realisateur" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row px-4 py-2">
            <div class="col-sm-4">
                <label asp-for="Resume" class="control-label"></label>
            </div>
            <div class="col-sm-6">
                <textarea asp-for="Resume" class="form-control" name="Resume" cols="40" rows="5"></textarea>
                <span asp-validation-for="Resume" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row px-4 py-2">
            <div class="col-sm-4">
                <label asp-for="Genre" class="control-label"></label>
            </div>
            <div class="col-sm-6">
                <select class="form-control" name="Genre">
                    @foreach (var genre in (string[])ViewData["genres"])
                    {
                        <option asp-for="Genre" value="@genre">@genre</option>
                    }

                </select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row px-4 py-2">
            <div class="col-sm-4">
                <label asp-for="Date" class="control-label"></label>
            </div>
            <div class="col-sm-6">
                <input type="date" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row px-4 py-2">
            <div class="col-sm-4">
                <label asp-for="Duree" class="control-label"></label> (en minutes)
            </div>
            <div class="col-sm-6">
                <input type="number" min="0" asp-for="Duree" class="form-control" />
                <span asp-validation-for="Duree" class="text-danger"></span>
            </div>
        </div>
    </fieldset>
    <div class="form-group text-center mt-4">
        <input type="submit" value="Ajouter" class="btn btn-primary" />
    </div>
</form>
<div class="mt-4">
    <a class="text-decoration-none" asp-action="Index"><i class="bi bi-arrow-left-circle-fill"></i> Retour à la
        page précédente</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}