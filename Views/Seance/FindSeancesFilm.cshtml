@model IEnumerable<GestionCinema.Models.Seance>

@{
    ViewData["Title"] = "Rechercher les séances d'un film";
}
<h2 class="mb-5">|Séance du film</h2>

<div class="container pt-4">
    <div class="row justify-content-start">
        @foreach (var item in Model)
        {
            <div class="col-sm p-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">Cinéma : @Html.DisplayFor(modelItem => item.Cinema.Nom)</h5>
                        <hr>
                        <p class="card-text text-truncate-2">@Html.DisplayFor(modelItem => item.Date)</p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Plus d'info</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="mt-5">
    <a class="text-decoration-none" asp-controller="Film" asp-action="Index"><i
            class="bi bi-arrow-left-circle-fill"></i> Retour à la
        page précédente</a>

</div>