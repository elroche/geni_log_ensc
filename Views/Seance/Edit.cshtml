@model GestionCinema.Models.Seance

@{
    ViewData["Title"] = "Modifier la seance";
}
<h2 class="mb-5">| Modifier la seance @Html.DisplayFor(model => model.Id)</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Film" />
    <input type="hidden" asp-for="Salle" />
    <input type="hidden" asp-for="Cinema" />
    <input type="hidden" asp-for="CinemaId" />
    <fieldset class="fieldset-style p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row px-4 py-2">
            <div class="col-sm-4">
                <label asp-for="Film" class="control-label"></label>
            </div>
            <div class="col-sm-6">
                <select asp-for="FilmId" class="form-control" asp-items="ViewBag.FilmId"></select>
                <span asp-validation-for="FilmId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row px-4 py-2">
            <div class="col-sm-4">
                <label asp-for="Salle" class="control-label"></label>
            </div>
            <div class="col-sm-6">
                <select asp-for="SalleId" class="form-control" asp-items="ViewBag.SalleId"></select>
                <span asp-validation-for="SalleId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="control-label"></label>
            <input type="date" asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NbPlaceAchete" class="control-label"></label>
            <input type="number" asp-for="NbPlaceAchete" class="form-control" />
            <span asp-validation-for="NbPlaceAchete" class="text-danger"></span>
        </div>
    </fieldset>
    <div class="form-group text-center mt-4">
        <input type="submit" value="Modifier" class="btn btn-primary" />
    </div>
</form>
<div>
    <a class="text-decoration-none" asp-action="Index"><i class="bi bi-arrow-left-circle-fill"></i> Retour à
        la page précédente</a>
</div>



@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}