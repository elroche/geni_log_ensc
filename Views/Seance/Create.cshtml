@model GestionCinema.Models.Seance

@{
    ViewData["Title"] = "Ajouter une séance";
}

<div class="text-center">
    <h1>Ajouter une séance</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Film" class="control-label"></label>
                    <input type="Film" asp-for="Film" class="form-control" />
                    <span asp-validation-for="Film" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input type="date" asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NbPlaceAchete" class="control-label"></label>
                    <input type="number" asp-for="NbPlaceAchete" class="form-control" />
                    <span asp-validation-for="NbPlaceAchete" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Ajouter" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </div>
</div>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}