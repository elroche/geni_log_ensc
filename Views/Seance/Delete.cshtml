@model GestionCinema.Models.Seance

@{
    ViewData["Title"] = "Supression d'une séance";
}

<div class="text-center">
    <h2>Suppression d'une séance</h2>
    <hr />
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
    <p>Etes vous sûr de vouloir supprimer cette séance?</p>

    <div class="row justify-content-around custom-line">
        <div class="col-3">
            <a asp-action="Index" class="btn btn-secondary">Retour a la liste</a>
        </div>

        <div class="col-3">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Suppprimer" class="btn btn-danger" />
                </div>
            }
        </div>
    </div>
</div>
